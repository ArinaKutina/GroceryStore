<Window x:Class="GroceryStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceryStore"
        mc:Ignorable="d"
        Title="Добро пожаловать в Grocery Store!" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel Margin="0,10,0,10">
            <TextBlock Text="Grocery Store" FontSize="80" FontWeight="Bold" Foreground="#4F7942" Margin="60 60 0 0" />
            <Button x:Name="BuyButton" Content="Купить" FontSize="24" Foreground="#2F4538" Height="70" Width="1000" Margin="0 100 750 0" Click="BuyButton_Click" />
            <Button x:Name="StoreButton" Content="Посмотреть товары на складе" FontSize="24" Foreground="#2F4538" Height="70" Width="1000" Margin="0 40 750 0" Click="StoreButton_Click" />
            <Button x:Name="BarcodeButton" Content="Найти товар по штрихкоду" FontSize="24" Foreground="#2F4538" Height="70" Width="1000" Margin="0 40 750 0" Click="BarcodeButton_Click"  />
            <Button x:Name="CloseButton" Content="Закрыть" FontSize="24" Foreground="#2F4538" Height="70" Width="650" Margin="1150 350 0 0" Click="CloseButton_Click" />

        </StackPanel>
    </Grid>
</Window>
